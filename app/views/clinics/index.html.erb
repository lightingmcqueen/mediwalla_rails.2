<%- model_class = Clinic -%>
<div class="page-header">
  <h1><%=t '.title', :default => Clinic %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:address_line_1) %></th>
      <th><%= model_class.human_attribute_name(:address_line_2) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:country_id) %></th>
      <th><%= model_class.human_attribute_name(:phone_country_code) %></th>
      <th><%= model_class.human_attribute_name(:zipcode) %></th>
      <th><%= model_class.human_attribute_name(:ratings) %></th>
      <th><%= model_class.human_attribute_name(:coordinator) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @clinics.each do |clinic| %>
      <tr>
        <td><%= clinic.id %></td>
        <td><%= clinic.title %></td>
        <td><%= clinic.description %></td>
        <td><%= clinic.address_line_1 %></td>
        <td><%= clinic.address_line_2 %></td>
        <td><%= clinic.city %></td>
        <td><%= clinic.country_id %></td>
        <td><%= clinic.phone_country_code %></td>
        <td><%= clinic.zipcode %></td>
        <td><%= clinic.ratings %></td>
        <td><%= clinic.coordinator %></td>
        <td><%=l clinic.created_at, format: :long %></td>
        <td>
          <%= link_to clinic_path(clinic), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to clinic_path(clinic), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_clinic_path,
            :class => 'btn btn-primary' %>
